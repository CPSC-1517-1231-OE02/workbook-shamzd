<h3>Checkbox Demo</h3>

<div class="mb-3">
	<div class="form-check mb-3">
		<input class="form-check-input" type="checkbox" id="example-checkbox" @bind="CheckboxValue" />
		<label class="form-check-label" for="exampe-checkbox">
			Do you like checkboxes?
		</label>
	</div>
	<button class="btn btn-primary" type="submit" @onclick="HandleSubmit">Checkbox Submit</button>
</div>

@code {
	private bool CheckboxValue { get; set; }

	[Parameter]
	public EventCallback<string> OnDataSent { get; set; }

	private void HandleSubmit()
	{
		OnDataSent.InvokeAsync(CheckboxValue ? "Checked" : "Not Checked");
	}
}
