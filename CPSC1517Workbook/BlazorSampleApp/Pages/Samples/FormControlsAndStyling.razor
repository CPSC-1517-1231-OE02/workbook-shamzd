@page "/form-controls"

<HeadContent>
	<link href="/css/styles.css" rel="stylesheet"/>
</HeadContent>

<h3>Form Controls And Styling Demo</h3>

<ControlsCheckbox OnDataSent=" HandleDataReceived" />
<ControlsSelect OnDataSent="HandleDataReceived" />

@if (ReceivedData != null)
{
	<div class="alert alert-info">
		@ReceivedData
	</div>
}

@code {

	private string? ReceivedData { get; set; }

	private void HandleDataReceived(string data)
	{
		ReceivedData = data;
	}
}
